<%- include("partials/header") %>
<%- include("partials/flash") %>
<link rel="stylesheet" href="/stylesheets/weightsShow.css" />
<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <div class="block" id="list">
                <h3>Full Weight History</h3>
                <div class="text-center" id="padding-bottom">
                    <ul class="weights-list">
                        <% for(var i=0; i<weights.length; i++) {%>
                        <% if(typeof weights[i] == "undefined"){ %><p> Add more weights to populate the list</p>
                        <%break } else{%>
                        <li class="weights-list-item"><span
                                id="bold"><%= JSON.stringify(weights[i].weight) %>lbs</span><span id="muted"> on
                                <%= JSON.parse(JSON.stringify(weights[i].date)) %></span>
                            <a href="weights/<%= weights[i].id %>/edit"><i class="fa fa-pencil-square-o"
                                    aria-hidden="true"></i></a>
                            <form class="custom-btn" action="/profile/weights/<%= weights[i].id %>?_method=DELETE"
                                method="POST" class="delete-form">
                                <!-- Cant make a get request from a button, so it needs to be a form -->
                                <input type="submit" class="trash-can" value="&#xf1f8">
                            </form>
                            <% } %>
                            <% } %>
                    </ul>
                </div>
            </div>

        </div>






        <%- include("partials/footer") %>